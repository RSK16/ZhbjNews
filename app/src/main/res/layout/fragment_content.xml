<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apple.zhbjnews.fragment.ContentFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.apple.zhbjnews.view.NoScrollViewPager
            android:background="#fff"
            android:id="@+id/nsp_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.example.apple.zhbjnews.view.NoScrollViewPager>
        <RadioGroup
            android:id="@+id/rg_group"
            android:gravity="center"
            android:background="@drawable/bottom_tab_bg"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                style="@style/RB_Style"
                android:drawableTop="@drawable/tab_home_selector"
                android:text="首页"
                android:id="@+id/rb_fragmentcontent_home"/>
             <RadioButton
                style="@style/RB_Style"
                android:drawableTop="@drawable/tab_news_selector"
                android:text="新闻中心"
                android:id="@+id/rb_fragmentcontent_news"/>
             <RadioButton
                style="@style/RB_Style"
                android:drawableTop="@drawable/tab_smart_selector"
                android:text="智慧服务"
                android:id="@+id/rb_fragmentcontent_smart"/>
            <RadioButton
                style="@style/RB_Style"
                android:drawableTop="@drawable/tab_gov_selector"
                android:text="政务"
                android:id="@+id/rb_fragmentcontent_gov"/>
             <RadioButton
                style="@style/RB_Style"
                android:drawableTop="@drawable/tab_settingselector"
                android:text="设置"
                android:id="@+id/rb_fragmentcontent_setting"/>

        </RadioGroup>
    </LinearLayout>

</FrameLayout>
